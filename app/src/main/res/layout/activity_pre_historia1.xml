<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal"
    android:layout_gravity="center"
    tools:context=".PreHistoria1" >

    <Button
        android:id="@+id/button_example1"
        android:layout_gravity="left|top"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_margin="3dp"
        android:textSize="21sp"
        android:background="@drawable/button_default"
        android:backgroundTint="#87717171"
        android:text="Preciso ir ao banheiro" />

    <Button
        android:id="@+id/button_example2"
        android:layout_gravity="left|top"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:textSize="21sp"
        android:layout_margin="3dp"
        android:background="@drawable/button_default"
        android:backgroundTint="#87717171"
        android:text="Estou com dor repentina" />

    <Button
        android:id="@+id/button_example3"
        android:layout_gravity="left|top"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_margin="3dp"
        android:textSize="21sp"
        android:background="@drawable/button_default"
        android:backgroundTint="#87717171"
        android:text="Estou com fome" />

    <Button
        android:id="@+id/button_example4"
        android:layout_gravity="left|top"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_margin="3dp"
        android:textSize="21sp"
        android:background="@drawable/button_default"
        android:backgroundTint="#87717171"
        android:text="Estou com sede" />

</GridLayout>